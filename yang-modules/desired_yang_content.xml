<nw:networks xmlns:dl="urn:ietf:params:xml:ns:yang:device-layer" xmlns:eth="urn:ietf:params:xml:ns:yang:ethernet-port" xmlns:nt="urn:ietf:params:xml:ns:yang:ietf-network-topology" xmlns:nw="urn:ietf:params:xml:ns:yang:ietf-network" xmlns:usb="urn:ietf:params:xml:ns:yang:usb-port">
  <nw:network>
    <nw:network-id>device-layer-network</nw:network-id>
    <nw:network-types>
      <dl:device-layer-topology />
    </nw:network-types>

    <nw:node>
      <nw:node-id>nuc-0</nw:node-id>
      <dl:device-layer-node-attributes>
        <dl:device-name>nuc</dl:device-name>
        <dl:device-type>pc</dl:device-type>
        <dl:weight>1000</dl:weight>
      </dl:device-layer-node-attributes>

      <nt:termination-point>
        <nt:tp-id>nuc-0-rj45-0</nt:tp-id>
        <dl:device-layer-termination-point-attributes>
          <dl:port-name>ethernet</dl:port-name>
          <dl:port-type>rj45</dl:port-type>
          <dl:wired>true</dl:wired>
        </dl:device-layer-termination-point-attributes>
      </nt:termination-point>

      <nt:termination-point>
        <nt:tp-id>nuc-0-usb30-0</nt:tp-id>
        <dl:device-layer-termination-point-attributes>
          <dl:port-name>nuc-usb30</dl:port-name>
          <dl:port-type>usb</dl:port-type>
          <dl:wired>true</dl:wired>
          <usb:version>usb3.0</usb:version>
          <usb:power-consumption>2.5</usb:power-consumption>
        </dl:device-layer-termination-point-attributes>
      </nt:termination-point>

      <nt:termination-point>
        <nt:tp-id>nuc-0-usb30-1</nt:tp-id>
        <dl:device-layer-termination-point-attributes>
          <dl:port-name>nuc-usb30</dl:port-name>
          <dl:port-type>usb</dl:port-type>
          <dl:wired>true</dl:wired>
          <usb:version>usb3.0</usb:version>
          <usb:power-consumption>2.5</usb:power-consumption>
        </dl:device-layer-termination-point-attributes>
      </nt:termination-point>
    </nw:node>

    <nw:node>
      <nw:node-id>camera-0</nw:node-id>
      <dl:device-layer-node-attributes>
        <dl:device-name>realsense-d455-camera</dl:device-name>
        <dl:device-type>d455</dl:device-type>
        <dl:weight>72</dl:weight> <!-- gram-->
      </dl:device-layer-node-attributes>
      
      <nt:termination-point>
        <nt:tp-id>camera-0-usb-typec-0</nt:tp-id>
        <dl:device-layer-termination-point-attributes>
          <dl:port-name>realsense-d455-usb</dl:port-name>
          <dl:port-type>usb</dl:port-type>
          <dl:wired>true</dl:wired>
          <usb:version>usb3.2</usb:version>
          <usb:power-consumption>2.5</usb:power-consumption>
        </dl:device-layer-termination-point-attributes>
      </nt:termination-point>
    </nw:node>

    <nt:link>
      <nt:link-id>nuc-0-camera-0-link</nt:link-id>
      <nt:source>
        <nt:source-node>camera-0</nt:source-node>
        <nt:source-tp>camera-0-usb-typec-0</nt:source-tp>
      </nt:source>
      <nt:destination>
        <nt:dest-node>nuc-0</nt:dest-node>
        <nt:dest-tp>nuc-0-usb30-0</nt:dest-tp>
      </nt:destination>
      <dl:device-layer-link-attributes>
        <dl:physical-link-name>camera-nuc-usb-cable</dl:physical-link-name>
        <dl:physical-link-type>usb30</dl:physical-link-type>
        <dl:cable-length>2</dl:cable-length> <!-- m -->
        <usb:source-connector-type>usb30-micro-b-male</dl:source-connector-type>
        <usb:destination-connector-type>usb30-type-a-male</dl:destination-connector-type>
        <usb:max-data-transfer>20</usb:max-data-transfer> <!-- Gbps -->
        <usb:max-power-transfer>15</usb:max-power-transfer> <!-- Watt -->
      </dl:device-layer-link-attributes>
    </nt:link>

  </nw:network>
</nw:networks>