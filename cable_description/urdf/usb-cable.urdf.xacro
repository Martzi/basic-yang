<?xml version="1.0"?>

<robot name="usb-cable"
    xmlns:xacro="http://wiki.ros.org/xacro">

    <xacro:macro name="usb-cable" params="parent src_port dst_port length">

        <joint name="usb-cable-joint" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${src_port}"/>
            <child link="usb-cable-link"/> <!-- kÃ¡bel csonk -->
        </joint>


        <link name="usb-cable-link">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <cylinder length="${length}" radius="0.001"/> <!-- measure 3D point distances -->
                </geometry>
                <material name="Black">
                    <color rgba="0 0 0 1"/>
                </material>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder length="${length}" radius="0.001"/>
                </geometry>
            </collision>
        </link>



